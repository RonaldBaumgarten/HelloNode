const express = require('express')
const app = express()
const port = 3000

app.get('/', (req, res) => {
  res.send('Hallo Ali! <br/> Das hier habe ich schnell nach der Anleitung auf der Express-Seite erstellt, dann als Repository bei GitHub hochgeladen und mit Render (https://render.com/) deployt. <br/> Eine ganz einfache Anleitung, wie man eine Express-Projekt deployen kann, gibt es <br/> <a href=" https://render.com/docs/deploy-node-express-app">hier</a>.')
})

app.listen(port, () => {
  console.log(`Example app listening on port ${port}`)
})
